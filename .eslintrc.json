{
  "extends": ["eslint:recommended", "next", "next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["src/**/*.test.ts"],
      "rules": {
        // Disable all rules for test files
        "prettier/prettier": "off",
        // Disable "is not defined" rule for test files
        "no-undef": "off"
      }
    }
  ]
}
